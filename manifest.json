{
    "name": "HUJI Moodle Notifier",
    "version": "1.0",
    "description": "Tracks a HUJI moodle user tasks and allows the user to set notification timings for each course (or fallback to default settings)",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "src/Assets/Images/Icons/icon128.png",
        "48": "src/Assets/Images/Icons/icon48.png",
        "16": "src/Assets/Images/Icons/icon16.png"
    },
    "browser_action": {
        "default_title": "HUJI Moodle Notifier",
        "default_popup": "src/index.html",
        "default_icon": {
            "128": "src/Assets/Images/Icons/icon128.png",
            "48": "src/Assets/Images/Icons/icon48.png",
            "16": "src/Assets/Images/Icons/icon16.png"
        }
    },
    "manifest_version": 2
}