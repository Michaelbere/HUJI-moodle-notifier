{
    "name": "HUJI Moodle Notifier",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Tracks a HUJI moodle user tasks and allows the user to set notification timings for each course (or fallback to default settings)",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_title": "HUJI Moodle Notifier",
        "default_popup": "index.html",
        "default_icon": {
            "128": "icon128.png",
            "48": "icon48.png",
            "16": "icon16.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["https://moodle2.cs.huji.ac.il/*"],
          "js": ["jquery.min.js", "content.js"]
        }
      ]
}